{
  "entrypoint": "index.html",
  "shell": "src/retro-app.html",
  "fragments": [
    "src/retro-app-desktop.html",
    "src/retro-app-mobile.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled",
      "js": {"minify": false}
    },
    {
      "preset": "es6-bundled",
      "js": {"minify": false}
    },
    {
      "preset": "es6-unbundled",
      "js": {"minify": false}
    }
  ]
}
